        border-spacing: 1px;
        min-width: 20px;
        height: 10px;
    }

    .lanTable {
        border-spacing: 0px;
    }
</style>
<div id="bodyContent">

    <div class="lanTableContainer drag">
        <table class="lanTable resize">
            <tr>
                <td>
                    <table class="tableH-a">
                        <tr>
                            <td class="seat-1"></td>
                            <td class="seat-2"></td>
