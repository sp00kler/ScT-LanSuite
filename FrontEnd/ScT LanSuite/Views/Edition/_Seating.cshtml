                            <td class="seat-9"></td>
                            <td class="seat-10"></td>
                            <td class="seat-11"></td>
                            <td class="seat-12"></td>
                        </tr>
                        <tr>
                            <td class="seat-19"></td>
                            <td class="seat-20"></td>
                            <td class="seat-21"></td>
                            <td class="seat-22"></td>
                            <td class="seat-23"></td>
                            <td class="seat-24"></td>
                        </tr>
                    </table>
